{
  "name": "ragie-ai-slack-connector",
  "version": "1.0.0",
  "description": "Ragie slack connector",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "start": "node --max-old-space-size=4096 dist/server.js",
    "dev": "nodemon --exec node --loader ts-node/esm server.ts",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "eslint '**/*.ts' --fix",
    "prepare": "husky",
    "generate-jwt": "ts-node/esm scripts/generate-jwt-secret.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@slack/web-api": "^7.7.0",
    "@types/jsonwebtoken": "^9.0.7",
    "axios": "^1.7.8",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "debug": "^4.4.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "groq-sdk": "^0.8.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "eslint-plugin-vue": "^9.31.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "sequelize-cli": "^6.6.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
}
